<div class="container">
  <div class="cards my-4">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://loremflickr.com/500/600/<%= list.name.split.first %>)">
        <%= list.name %>
        <%= link_to '', list_path(list), class: 'card-link' %> 
      </div>
    <% end %>
  </div>
</div>
